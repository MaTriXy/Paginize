<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  >
  <Button
    android:id="@+id/btn_show_base_page"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Show BasePage"
    />
  <Button
    android:id="@+id/btn_show_option_menu_page"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Show OptionMenuPage"
    />
  <Button
    android:id="@+id/btn_show_slide_in_menu_page"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Show SlideInMenuPage"
    />
</LinearLayout>

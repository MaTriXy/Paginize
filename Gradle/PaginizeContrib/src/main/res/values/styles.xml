<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Theme.PaginizeContrib" parent="Base.Theme.PaginizeContrib">
  </style>

  <style name="Theme.PaginizeContrib.Button" parent="@style/Widget.AppCompat.Button.Small">
    <item name="android:minWidth">0dp</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:textColor">@color/paginize_contrib_primary_text</item>
  </style>

  <style name="Base.Theme.PaginizeContrib" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimaryDark">@color/paginize_contrib_primary_dark</item>
    <item name="colorPrimary">@color/paginize_contrib_primary</item>
    <item name="colorAccent">@color/paginize_contrib_accent</item>
    <item name="colorControlHighlight">@color/paginize_contrib_highlighted</item>


    <item name="colorControlActivated">@color/paginize_contrib_accent</item>
    <item name="colorControlNormal">@color/paginize_contrib_light_gray</item>

    <item name="android:windowBackground">@color/paginize_contrib_window_background</item>
    <item name="android:windowActionModeOverlay">true</item>

    <item name="android:buttonStyle">@style/Theme.PaginizeContrib.Button</item>
  </style>

</resources>